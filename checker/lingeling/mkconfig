#!/bin/sh

die () {
   echo "*** mkconfig: $*" 1>&2
   exit 1
}

[ -f makefile ] || die "can not find 'makefile'"

cat<<EOF
/**********************************************************/
/* Automatically generated by './mkconfig': do note edit! */
/**********************************************************/
EOF

echo "#define LGL_OS \"`uname -srmn`\""
echo "#define LGL_COMPILED \"`date`\""
cat<<EOF
#define LGL_RELEASED "Sat Jul 31 11:52:29 CEST 2010"
#define LGL_VERSION "276"
#define LGL_ID "6264d55e84105d420ec6e7f27ad0fad15f5885a4"
EOF
